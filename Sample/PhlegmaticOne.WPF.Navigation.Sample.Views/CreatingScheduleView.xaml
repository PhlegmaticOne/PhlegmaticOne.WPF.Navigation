<UserControl x:Class="PhlegmaticOne.WPF.Navigation.Sample.Views.CreatingScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PhlegmaticOne.WPF.Navigation.Sample.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Creating schedule" FontSize="30" Foreground="Wheat"/>

        <Button Grid.Row="1" Content="Create schedule" 
                Foreground="Wheat" FontSize="24"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding CreateScheduleCommand}"/>
    </Grid>
</UserControl>
